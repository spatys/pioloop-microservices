{
  "Routes": [
    {
      "DownstreamPathTemplate": "/api/auth/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "auth-microservice",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/auth/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "PATCH" ],
      "SwaggerKey": "auth",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "RouteClaimsRequirement": {
        "role": "user"
      }
    },
    {
      "DownstreamPathTemplate": "/api/auth/login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "auth-microservice",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/auth/login",
      "UpstreamHttpMethod": [ "POST" ],
      "SwaggerKey": "auth"
    },
    {
      "DownstreamPathTemplate": "/api/email/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "email-microservice",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/api/email/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE", "PATCH" ],
      "SwaggerKey": "email"
    }
  ],
  "SwaggerEndPoints": [
    {
      "Key": "auth",
      "Config": [
        {
          "Name": "Auth Microservice API",
          "Version": "v1",
          "Url": "http://auth-microservice/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "email",
      "Config": [
        {
          "Name": "Email Microservice API",
          "Version": "v1",
          "Url": "http://email-microservice/swagger/v1/swagger.json"
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://api-gateway:80"
  }
}
